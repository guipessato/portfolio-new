.slick
    &-arrow
        position: absolute;
        top: 50%;
        z-index: 100;
        transform: translateY(-50%);
        transition: transition;
        background: transparent;
        border: none;
        width: auto;
        min-width: 0;
        height: auto;
        padding: 0;

        svg
            fill: colorWhite;
            width: 18px;
            height: 18px;

    &-arrow.slick-disabled
        opacity: 0.3;

    &-next
        right: 15px;
        transform: rotate(180deg) translateY(50%) !important;

    &-prev
        left: 15px;

    &-list, &-track
        min-width: 100%;
